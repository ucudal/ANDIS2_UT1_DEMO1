            "name": "Python: Remote Attach Service A",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/service_a",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false
        },
